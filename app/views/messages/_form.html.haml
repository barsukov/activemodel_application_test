  .control-group
    = f.label :page, :class => 'control-label'
    .controls
      = f.text_field :page, :class => 'text_field'
  .control-group
    = f.label :uid, :class => 'control-label'
    .controls
      = f.text_field :uid, :class => 'text_field'
  .control-group
    = f.label :pub0, :class => 'control-label'
