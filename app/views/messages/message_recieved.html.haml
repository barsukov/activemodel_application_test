.row
  =link_to 'back to message',new_message_path, :class => 'btn'
  .row-bottom
    =get_message_label(@code,@result_message)
  %p
    -if @code == 200
      -if @offers.empty?
        .no_offers
          No offers
      -else
        -@offers.each do |offer|
          .offer
            .title
              =offer['title']
            .payout
              =offer['payout']
            .thumbnail
              =offer['thumbnail']
